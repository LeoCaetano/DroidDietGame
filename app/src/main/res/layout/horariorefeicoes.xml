<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/txtRefeicao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refeição"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="horario"
            android:textColor="#2F4F4F" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/img_editar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75px"
            android:minWidth="75px"
            android:layout_marginLeft="15px"
            android:scaleType="fitXY"
            android:src="@drawable/img_editar"
            android:layout_gravity="right"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/img_excluir"
            android:layout_marginTop="10px"/>

        <ImageView
            android:id="@+id/img_excluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75px"
            android:minWidth="75px"
            android:layout_marginLeft="15px"
            android:scaleType="fitXY"
            android:src="@drawable/img_excluir"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10px"/>
    </RelativeLayout>
</LinearLayout>